# PolyAI Dashboard Environment Configuration
# Copy this file to .env and update the values

# API Backend URL (default: http://localhost:5000)
REACT_APP_SERVER_ROOT=http://localhost:5000
REACT_APP_API_BASE=http://localhost:5000/api/v1

# WebSocket URL for real-time printer updates
REACT_APP_WS_URL=ws://127.0.0.1:5000/ws

# For office LAN deployment, use your server's IP:
# REACT_APP_SERVER_ROOT=http://192.168.1.100:5000
# REACT_APP_API_BASE=http://192.168.1.100:5000/api/v1
# REACT_APP_WS_URL=ws://192.168.1.100:5000/ws

# Optional: Set to 'development' or 'production'
NODE_ENV=development
